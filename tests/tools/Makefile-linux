all: hidtest-hidraw libs

libs: libhidapi-hidraw.so

CC       ?= gcc
CFLAGS   ?= -Wall -g -fpic

LDFLAGS  ?= -Wall -g


COBJS     = ../../../hidapi/linux/hid.o awe_hid_transfer.o
OBJS      = $(COBJS)
LIBS_UDEV = `pkg-config libudev --libs` -lrt
LIBS      = $(LIBS_UDEV)
INCLUDES ?= -I../../../hidapi/hidapi -I../../../hidapi/linux `pkg-config libusb-1.0 --cflags`


# Console Test Program
hidtest-hidraw: $(COBJS)
    $(CC) $(LDFLAGS) $^ $(LIBS_UDEV) -o $@

# Shared Libs
libhidapi-hidraw.so: $(COBJS)
    $(CC) $(LDFLAGS) $(LIBS_UDEV) -shared -fpic -Wl,-soname,$@.0 $^ -o $@

# Objects
$(COBJS): %.o: %.c
    $(CC) $(CFLAGS) -c $(INCLUDES) $< -o $@


clean:
    rm -f $(OBJS) hidtest-hidraw libhidapi-hidraw.so $(COBJS)

.PHONY: clean libs

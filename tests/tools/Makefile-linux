all: awe_hid_transfer libs

libs: libhidapi-awe_hid_transfer.so

CC       ?= gcc
CFLAGS   ?= -Wall -g -fpic

LDFLAGS  ?= -Wall -g


COBJS     = ../../../hidapi/linux/hid.o awe_hid_transfer.o
OBJS      = $(COBJS)
LIBS_UDEV = `pkg-config libudev --libs` -lrt
LIBS      = $(LIBS_UDEV)
INCLUDES ?= -I../../../hidapi/hidapi -I../../../hidapi/linux `pkg-config libusb-1.0 --cflags`


# Console Test Program
awe_hid_transfer: $(COBJS)
	$(CC) $(LDFLAGS) $^ $(LIBS_UDEV) -o $@

# Shared Libs
libhidapi-awe_hid_transfer.so: $(COBJS)
	$(CC) $(LDFLAGS) $(LIBS_UDEV) -shared -fpic -Wl,-soname,$@.0 $^ -o $@

# Objects
$(COBJS): %.o: %.c
	$(CC) $(CFLAGS) -c $(INCLUDES) $< -o $@


clean:
	rm -f $(OBJS) awe_hid_transfer libhidapi-awe_hid_transfer.so $(COBJS)

.PHONY: clean libs

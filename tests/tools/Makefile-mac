###########################################
# Simple Makefile for HIDAPI test program
#
# Alan Ott
# Signal 11 Software
# 2010-07-03
###########################################

all: hidtest

CC=gcc
COBJS=../../../hidapi/mac/hid.o awe_hid_transfer.o
OBJS=$(COBJS)
CFLAGS+=-I../../../hidapi/hidapi -I../../../hidapi/mac/ -Wall -g -c
LIBS=-framework IOKit -framework CoreFoundation


hidtest: $(OBJS)
	$(CC) -Wall -g $^ $(LIBS) -o awe_hid_transfer

$(COBJS): %.o: %.c
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f *.o awe_hid_transfer

.PHONY: clean
